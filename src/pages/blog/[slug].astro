---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} â€” Alejandro de la Cruz`} description={post.data.description}>
  <article>
    <header class="mb-8">
      <h1 class="text-3xl font-bold" style={`color: var(--color-fg-bold);`}>{post.data.title}</h1>
      <div class="mt-3 flex items-center gap-4">
        <time class="text-sm" style={`color: var(--color-fg-light);`} datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </time>
        {post.data.tags.length > 0 && (
          <div class="flex gap-2">
            {post.data.tags.map((tag) => (
              <span class="badge">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>
    <div class="prose max-w-none">
      <Content />
    </div>
  </article>

  <a href="/blog/" class="link-animated mt-12 inline-block text-sm">
    &larr; Back to all posts
  </a>
</BaseLayout>
